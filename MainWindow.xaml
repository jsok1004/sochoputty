<Window x:Class="SochoPutty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Socho Putty Manager" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#000000">
    <Window.Resources>
        <!-- 다크 테마 스타일 -->
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#000000"/>
                    <Setter Property="Foreground" Value="#33eaff"/>
                </Trigger>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#000000"/>
                    <Setter Property="Foreground" Value="#33eaff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="{x:Type ToolBar}">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Foreground" Value="#33eaff"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2bc7d9"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style TargetType="{x:Type Separator}" BasedOn="{StaticResource {x:Type Separator}}">
            <Setter Property="Background" Value="#33eaff"/>
        </Style>
        
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
        </Style>
        
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33EAff"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="0"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0000FF"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#33eaff"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#33eaff"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 메뉴바 -->
        <Menu Grid.Row="0">
            <MenuItem Header="파일(_F)">
                <MenuItem Header="새 연결(_N)" Click="NewConnection_Click"/>
                <MenuItem Header="연결 관리(_M)" Click="ManageConnections_Click"/>
                <Separator/>
                <MenuItem Header="종료(_X)" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="보기(_V)">
                <MenuItem Header="가로 분할(_A)" Click="SplitHorizontal_Click"/>
                <MenuItem Header="새로 분할(_S)" Click="SplitVertical_Click"/>
                <MenuItem Header="4화면 분할(_D)" Click="SplitQuad_Click"/>
                <Separator/>
                <MenuItem Header="분할 해제(_F)" Click="UnsplitAll_Click"/>
                <Separator/>
                <MenuItem Header="활성 세션 상태(_T)" Click="ShowActiveSessionStatus_Click"/>
            </MenuItem>
            <MenuItem Header="도구(_T)">
                <MenuItem Header="설정(_S)" Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="디버그(_D)">
                    <MenuItem Header="디버그 로그 보기" Click="ShowDebugLog_Click"/>
                    <MenuItem Header="로그 폴더 열기" Click="OpenLogFolder_Click"/>
                    <MenuItem Header="로그 초기화" Click="ClearDebugLog_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="정보(_A)" Click="About_Click"/>
            </MenuItem>
            <Separator/>
            <TextBlock Text="Socho Putty Manager V1.2.2" FontSize="12" FontWeight="Bold" Foreground="#33eaff" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        </Menu>
        
        <!-- 툴바 -->
        <Menu Grid.Row="1">
            <MenuItem Header="새 연결(_N)" Click="NewConnection_Click"/>
            <MenuItem Header="연결 관리(_M)" Click="ManageConnections_Click"/>
            <ComboBox Name="cmbQuickConnect" Width="200" 
                                  SelectionChanged="QuickConnect_SelectionChanged"
                                  IsEditable="True"
                                  Text="빠른 연결 선택..."/>
            <MenuItem Header="🔗" Click="QuickConnect_Click"/>
            <Separator/>
            <MenuItem Header="⬚분할 해제(_Q)" Click="UnsplitAll_Click"/>
            <MenuItem Header="↕가로 분할(_A)" Click="SplitHorizontal_Click"/>
            <MenuItem Header="↔새로 분할(_S)" Click="SplitVertical_Click"/>
            <MenuItem Header="🔠4화면 분할(_D)" Click="SplitQuad_Click"/>
        </Menu>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="2" Name="splitContainer" Background="#000000">
            <!-- 분할 영역들이 동적으로 추가될 Grid -->
            <!-- 기존 TabControl 제거 - SplitManager가 모든 것을 관리 -->
            
            <!-- 시작 화면 또는 빈 상태일 때 표시될 내용 -->
            <Border Name="startupBorder" Background="#0a0a0a" BorderBrush="#33eaff" BorderThickness="2" 
                    CornerRadius="8" Margin="20" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Socho Putty Manager" FontSize="24" FontWeight="Bold" 
                               Foreground="#33eaff" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="새 연결을 만들거나 기존 연결을 선택하세요." FontSize="14" 
                               Foreground="#ffffff" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnStartupNewConnection" Content="새 연결 만들기" 
                                Margin="0,0,10,0" Padding="15,8" FontSize="12"
                                Background="#1a1a1a" Foreground="#ffffff" 
                                BorderBrush="#33eaff" BorderThickness="1"
                                Click="NewConnection_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#1a1a1a"/>
                                    <Setter Property="Foreground" Value="#ffffff"/>
                                    <Setter Property="BorderBrush" Value="#33eaff"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="15,8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#33eaff"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Name="btnStartupManageConnections" Content="연결 관리" 
                                Padding="15,8" FontSize="12"
                                Background="#1a1a1a" Foreground="#FFFFFF" 
                                BorderBrush="#33eaff" BorderThickness="1"
                                Click="ManageConnections_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#1a1a1a"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="BorderBrush" Value="#33eaff"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="15,8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#33eaff"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window> 