<Window x:Class="SochoPutty.Windows.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#000000">
    <Window.Resources>
        <!-- 다크 테마 스타일 -->
        <Style TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="#000000"/>
        </Style>
        
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
        </Style>
        
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Background" Value="#999999"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}"
                                CornerRadius="4,4,0,0">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="0"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#33eaff"/>
                                <Setter Property="Foreground" Value="#000000"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2bc7d9"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground" Value="#33eaff"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
            <Setter Property="Background" Value="#000000"/>
        </Style>
        
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#33eaff"/>
        </Style>
        
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33eaff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33eaff"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2bc7d9"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style TargetType="{x:Type ScrollViewer}">
            <Setter Property="Background" Value="#000000"/>
        </Style>
        
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="#000000"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0">
            <!-- 일반 설정 -->
            <TabItem Header="일반">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <GroupBox Header="인터페이스" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkAlwaysOnTop" Content="항상 위에 표시" Margin="0,0,0,10"/>
                                <CheckBox Name="chkMinimizeToTray" Content="시스템 트레이로 최소화" Margin="0,0,0,10"/>
                                <CheckBox Name="chkShowToolbar" Content="도구 모음 표시" Margin="0,0,0,10"/>
                                <CheckBox Name="chkShowStatusBar" Content="상태 표시줄 표시" Margin="0,0,0,10"/>
                                <CheckBox Name="chkConfirmBeforeClosing" Content="종료 전 확인" Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="탭 위치:"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbTabPosition" Margin="5">
                                        <ComboBoxItem Content="상단" Tag="0"/>
                                        <ComboBoxItem Content="하단" Tag="1"/>
                                        <ComboBoxItem Content="왼쪽" Tag="2"/>
                                        <ComboBoxItem Content="오른쪽" Tag="3"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 보안 설정 -->
            <TabItem Header="보안">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="비밀번호" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkSavePasswordsEncrypted" Content="비밀번호를 암호화하여 저장" Margin="0,0,0,10"/>
                                <TextBlock Text="※ 비밀번호가 평문으로 저장되지 않도록 합니다." 
                                          FontSize="11" Foreground="#888888" TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="연결">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkAutoReconnect" Content="자동 재연결" Margin="0,0,0,10"
                                          Checked="AutoReconnect_Checked" Unchecked="AutoReconnect_Unchecked"/>
                                
                                <Grid Name="gridAutoReconnectSettings" Margin="20,0,0,0" IsEnabled="False">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Row="0" Grid.Column="0" Content="재연결 간격:"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtAutoReconnectInterval" 
                                             Text="30" Margin="5"/>
                                    <Label Grid.Row="0" Grid.Column="2" Content="초" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- 기본값 설정 -->
            <TabItem Header="기본값">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="새 연결 기본값" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="연결 타입:"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbDefaultConnectionType" Margin="5"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="테마 및 글꼴">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="테마:"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbTheme" Margin="5">
                                    <ComboBoxItem Content="기본" Tag="Default"/>
                                    <ComboBoxItem Content="다크" Tag="Dark"/>
                                    <ComboBoxItem Content="라이트" Tag="Light"/>
                                </ComboBox>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="글꼴:"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbFontFamily" Margin="5"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Content="글꼴 크기:"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Name="cmbFontSize" Margin="5"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="btnOK" Content="확인" Width="80" Margin="0,0,10,0" Click="OK_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="취소" Width="80" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 