<Window x:Class="SochoPutty.Windows.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0">
            <!-- 일반 설정 -->
            <TabItem Header="일반">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="테마" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="애플리케이션 테마:"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbApplicationTheme" Margin="5">
                                    <ComboBoxItem Content="다크 모드" Tag="Dark"/>
                                    <ComboBoxItem Content="일반 모드" Tag="Light"/>
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            
            <!-- 기본값 설정 -->
            <TabItem Header="기본값">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="새 연결 기본값" Margin="0,0,0,15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="연결 타입:"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbDefaultConnectionType" Margin="5"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="글꼴">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Content="글꼴:"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="cmbFontFamily" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Content="글꼴 크기:"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbFontSize" Margin="5"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="btnOK" Content="확인" Width="80" Margin="0,0,10,0" Click="OK_Click" IsDefault="True"/>
            <Button Name="btnCancel" Content="취소" Width="80" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 