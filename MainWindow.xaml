<Window x:Class="SochoPutty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Socho Putty Manager" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 메뉴바 -->
        <Menu Grid.Row="0">
            <MenuItem Header="파일(_F)">
                <MenuItem Header="새 연결(_N)" Click="NewConnection_Click"/>
                <MenuItem Header="연결 관리(_M)" Click="ManageConnections_Click"/>
                <Separator/>
                <MenuItem Header="종료(_X)" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="보기(_V)">
                <MenuItem Header="가로 분할(_A)" Click="SplitHorizontal_Click"/>
                <MenuItem Header="새로 분할(_S)" Click="SplitVertical_Click"/>
                <MenuItem Header="4화면 분할(_D)" Click="SplitQuad_Click"/>
                <Separator/>
                <MenuItem Header="분할 해제(_F)" Click="UnsplitAll_Click"/>
                <Separator/>
                <MenuItem Header="활성 세션 상태(_T)" Click="ShowActiveSessionStatus_Click"/>
            </MenuItem>
            <MenuItem Header="도구(_T)">
                <MenuItem Header="설정(_S)" Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="디버그(_D)">
                    <MenuItem Header="디버그 로그 보기" Click="ShowDebugLog_Click"/>
                    <MenuItem Header="로그 폴더 열기" Click="OpenLogFolder_Click"/>
                    <MenuItem Header="로그 초기화" Click="ClearDebugLog_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="정보(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- 툴바 -->
        <ToolBar Grid.Row="1">
            <Button Name="btnNewConnection" Click="NewConnection_Click" ToolTip="새 연결">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="새 연결"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="btnManageConnections" Click="ManageConnections_Click" ToolTip="연결 관리">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚙️" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="연결 관리"/>
                </StackPanel>
            </Button>
            <Separator/>
            <ComboBox Name="cmbQuickConnect" Width="200" 
                      SelectionChanged="QuickConnect_SelectionChanged"
                      IsEditable="True"
                      Text="빠른 연결 선택..."/>
            <Button Name="btnQuickConnect" Click="QuickConnect_Click" ToolTip="빠른 연결">
                <TextBlock Text="🔗"/>
            </Button>
            <Separator/>
            <Button Name="btnUnsplitAll" Click="UnsplitAll_Click" ToolTip="분할 해제">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⬚" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="분할 해제"/>
                </StackPanel>
            </Button>
            <Button Name="btnSplitHorizontal" Click="SplitHorizontal_Click" ToolTip="가로 분할">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="↕" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="가로 분할"/>
                </StackPanel>
            </Button>
            <Button Name="btnSplitVertical" Click="SplitVertical_Click" ToolTip="새로 분할">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="↔" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="새로 분할"/>
                </StackPanel>
            </Button>
            <Button Name="btnSplitQuad" Click="SplitQuad_Click" ToolTip="4화면 분할">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔠" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="4화면 분할"/>
                </StackPanel>
            </Button>
        </ToolBar>
        
        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="2" Name="splitContainer">
            <!-- 분할 영역들이 동적으로 추가될 Grid -->
            <!-- 기존 TabControl 제거 - SplitManager가 모든 것을 관리 -->
        </Grid>
    </Grid>
</Window> 